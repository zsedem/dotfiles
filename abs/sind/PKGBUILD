# Maintainer: Ádám Olivér Zsigmond <zsedem at gmail dott com>
pkgname='sind'
pkgver=r21.aeecca0
pkgrel=1
pkgdesc="Simple notification daemon, which writes notification to stdout"
url="https://github.com/htylo/simplenotifydaemon"
arch=('i686' 'x86_64' 'armv7h')
license=('MIT')
depends=('libdbus')
makedepends=('git' 'automake' 'libdbus' 'gcc')
source=('git://github.com/htylo/simplenotifydaemon')
md5sums=('SKIP')

provides=("${pkgname%}")
conflicts=("${pkgname%}")

pkgver() {
        mv "$srcdir/simplenotifydaemon" "$srcdir/${pkgname%}"
        cd "$srcdir/${pkgname%}"
        printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
        cd "$srcdir/${pkgname%}"
        make
}

package() {
        cd "$srcdir/${pkgname%}"
        make DESTDIR="$pkgdir/" install
        install -Dm644 license "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
